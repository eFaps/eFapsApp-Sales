<import xmlns="http://www.efaps.org/xsd"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.efaps.org/xsd http://www.efaps.org/xsd/eFaps_1.0.xsd">
    <!-- connect the Soles currency to the SystemConfiguration -->
    <object type="Admin_Common_SystemConfigurationLink">
        <attribute name="Key">Currency4Invoice</attribute>
        <attribute name="Description">This link defines the exchange rate of which currency will be displayed in the Invoices.</attribute>
        <linkattribute name="Value" type="ERP_Currency" select="OID">
            <queryattribute name="UUID">41823aa0-a961-46cb-b04e-adc48d8eec2c</queryattribute>
        </linkattribute>
        <linkattribute name="AbstractLink" type="Admin_Common_SystemConfiguration">
            <queryattribute name="UUID">c9a1cbc3-fd35-4463-80d2-412422a3802f</queryattribute>
        </linkattribute>
    </object>
    <object type="Admin_Common_SystemConfigurationLink">
        <attribute name="Key">Currency4ProductPrice</attribute>
        <attribute name="Description">This link defines the Currency whish is the base for Product prices.</attribute>
        <linkattribute name="Value" type="ERP_Currency" select="OID">
            <queryattribute name="UUID">691758fc-a060-4bd5-b1fa-b33296638126</queryattribute>
        </linkattribute>
        <linkattribute name="AbstractLink" type="Admin_Common_SystemConfiguration">
            <queryattribute name="UUID">c9a1cbc3-fd35-4463-80d2-412422a3802f</queryattribute>
        </linkattribute>
    </object>
    <object type="Admin_Common_SystemConfigurationLink">
        <attribute name="Key">CurrencyBase</attribute>
        <attribute name="Description">Base Currency used for all calculations. Meaning that e.g a invoice will always be stored in this currency.</attribute>
        <linkattribute name="Value" type="ERP_Currency" select="OID">
            <queryattribute name="UUID">41823aa0-a961-46cb-b04e-adc48d8eec2c</queryattribute>
        </linkattribute>
        <linkattribute name="AbstractLink" type="Admin_Common_SystemConfiguration">
            <queryattribute name="UUID">c9a1cbc3-fd35-4463-80d2-412422a3802f</queryattribute>
        </linkattribute>
    </object>
</import>
